[credential "https://arm.rnd.ki.sw.ericsson.se"]
        helper = store
[user]
	name = emrtsis
	email = marton.siska@ericsson.com
	name = Marton Siska
[core]
	pager = less -r
	editor = mcedit
	excludesfile = /home/emrtsis/.gitignore_global
[pull]
	rebase = true

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	required = true

[alias]
	lga = log --graph --oneline --all --decorate
	sm-update = submodule update --init --recursive
	cleanall = "!f() {\
                         git clean -xfd;\
                         git submodule foreach --recursive git clean -xfd;\
                         git reset --hard;\
                         git submodule foreach --recursive git reset --hard;\
                         git submodule update --init --recursive;\
                        };\
                        f"

	reorder = "!GIT_SEQUENCE_EDITOR=\"sed -i -n 'h;1n;2p;g;p'\" git rebase -i HEAD~2"